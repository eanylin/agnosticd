apiVersion: ocs.openshift.io/v1
kind: StorageCluster
metadata:
  namespace: {{ ceph_storage.ceph_namespace }}
  name: ocs-storagecluster
spec:
  resources:
    mon:
      requests:
        cpu: {{ ceph_storage.ceph_mon.resources.requests.cpu }}
        memory: {{ ceph_storage.ceph_mon.resources.requests.memory }}
    mds:
      requests:
        cpu: {{ ceph_storage.ceph_mds.resources.requests.cpu }}
        memory: {{ ceph_storage.ceph_mds.resources.requests.memory }}
    mgr:
      requests:
        cpu: {{ ceph_storage.ceph_mgr.resources.requests.cpu }}
        memory: {{ ceph_storage.ceph_mgr.resources.requests.memory }}
    noobaa-core:
      requests:
        cpu: {{ ceph_storage.noobaa_core.resources.requests.cpu }}
        memory: {{ ceph_storage.noobaa_core.resources.requests.memory }}
    noobaa-endpoint:
      requests:
        cpu: {{ ceph_storage.noobaa_endpoint.resources.requests.cpu }}
        memory: {{ ceph_storage.noobaa_endpoint.resources.requests.memory }}
    noobaa-db:
      requests:
        cpu: {{ ceph_storage.noobaa_db.resources.requests.cpu }}
        memory: {{ ceph_storage.noobaa_db.resources.requests.memory }}
  storageDeviceSets:
    - name: ocs-deviceset
      count: 1
      replica: 3
      resources:
        requests:
          cpu: {{ ceph_storage.ceph_osd.resources.requests.cpu }}
          memory: {{ ceph_storage.ceph_osd.resources.requests.memory }}
      placement: {}
      dataPVCTemplate:
        spec:
          storageClassName: gp2
          accessModes:
            - ReadWriteOnce
          volumeMode: Block
          resources:
            requests:
              storage: {{ ceph_storage.ceph_storage_requests| default('200Gi') }}
      portable: true